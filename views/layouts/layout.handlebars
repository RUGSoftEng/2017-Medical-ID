<!DOCTYPE html>
<html>
	<head>
		<title>Medical ID</title>
		<link rel="stylesheet" href="/css/bootstrap.css" />
		<link rel="stylesheet" href="/css/style.css" />
		<meta name="viewport" content="width=device-width">

		<script data-main='/js/common.js' src='/js/lib/require.js'></script>
	</head>

	<body>
		{{creator}}
		<nav class="navbar navbar-default">
			<div class="container-fluid">
				<div class="navbar-header navbar-left">
					<span class="navbar-brand nav-link unselectable">mID</span>
				</div>

				<div class="navbar-right">
					<ul class="nav navbar-nav">
						{{#if user}}
							<li class="nav-link" role="presentation"><a href="/users/logout">Logout</a></li>
							<li class="nav-link" role="presentation"><a href="/">Home</a></li>
						{{else}}
							<li class="nav-link" role="presentation"><a href="/users/login">Login</a></li>
							<li class="nav-link" role="presentation"><a href="/users/register">Register</a></li>
							<li class="nav-link" role="presentation"><a href="/create">Guest</a></li>
							<li class="nav-link" role="presentation"><a href="/">Home</a></li>
						{{/if}}
					</ul>
				</div>
			</div>
		</nav>

		<div class="container-fluid">
			<div class="row">
				<div class="hor-spacer"></div>
			</div>
			<div class="row">
				<div id="banner">
					<div id="bannerTitle">
						<p class="unselectable">
							<span style="font-size: 0.5em;">Your Personal</span>
							<br />
							Medical ID
						</p>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="hor-spacer"></div>
			</div>

			<div class="row">
				{{#if success_msg}}
					<div class="alert alert-success">{{success_msg}}</div>
				{{/if}}

				{{#if error_msg}}
					<div class="alert alert-danger">{{error_msg}}</div>
				{{/if}}

				{{#if error}}
					<div class="alert alert-danger">{{error}}</div>
				{{/if}}

				{{{body}}}
			</div>
		</div>
	</body>
</html>
