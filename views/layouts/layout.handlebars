<!DOCTYPE html>
<html>
	<head>
		<title>Medical ID</title>
		<link rel="stylesheet" href="/css/bootstrap.css" />
		<link rel="stylesheet" href="/css/style.css" />
		<script src='/js/lib/tether.min.js'></script>
		<script data-main='/js/common.js' src='/js/lib/require.js'></script>
		<meta name="viewport" content="width=device-width, initial-scale=1">
	</head>

	<body>
		{{creator}}
        
		<nav class="navbar navbar-toggleable navbar-inverse bg-inverse">
			<span class="navbar-brand unselectable">Medical ID</span>
            
			<button type="button" class="navbar-toggler navbar-toggler-right" data-toggle="collapse" data-target="#myNavbar">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="myNavbar">
				<ul class="navbar-nav">
					<li class="nav-item"><a class="nav-link" href="/">Home</a></li>
					{{#if user}}
						<li class="nav-item"><a class="nav-link" href="/create">Create</a></li>
						<li class="nav-item"><a class="nav-link" href="/users/logout">Logout</a></li>
					{{else}}
						<li class="nav-item"><a class="nav-link" href="/create">Guest</a></li>
						<li class="nav-item"><a class="nav-link" href="/users/login">Login</a></li>
						<li class="nav-item"><a class="nav-link" href="/users/register">Register</a></li>
					{{/if}}
				</ul>
			</div>
		</nav>

        {{#if success_msg}}
		  <div class="alert alert-success mb-0">{{success_msg}}</div>
		{{/if}}

        {{#if error_msg}}
		  <div class="alert alert-danger mb-0">{{error_msg}}</div>
		{{/if}}

		{{#if errors}}
            {{#each errors}}
                <div class="alert alert-danger mb-0">{{msg}}</div>
            {{/each}}
        {{/if}}
        
		<div class="container-fluid">
            {{{body}}}
		</div>
        
		<script src='/js/lib/jquery.min.js'></script>
		<script src='/js/lib/bootstrap.min.js'></script>
	</body>
</html>
